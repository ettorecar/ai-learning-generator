# AI Learning Generator Environment Configuration
# Copy this file to .env and configure your environment variables

# ===== APPLICATION SETTINGS =====
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# ===== SERVER CONFIGURATION =====
HOST=localhost
PORT=5000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== OPENAI API CONFIGURATION =====
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===== RATE LIMITING =====
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ===== CACHING CONFIGURATION =====
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
REDIS_URL=redis://localhost:6379/0

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=sqlite:///ai_learning.db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===== FILE UPLOAD SETTINGS =====
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=txt,pdf,doc,docx,md

# ===== EMAIL CONFIGURATION =====
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password

# ===== SECURITY SETTINGS =====
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
SESSION_KEY_PREFIX=ai_learning:
BCRYPT_LOG_ROUNDS=12

# ===== QUIZ GENERATION SETTINGS =====
DEFAULT_QUESTIONS_PER_QUIZ=10
MAX_QUESTIONS_PER_QUIZ=50
MIN_QUESTIONS_PER_QUIZ=3
QUESTION_TIMEOUT_SECONDS=30

# ===== CONTENT PROCESSING =====
MAX_CONTENT_LENGTH=50000
CONTENT_CHUNK_SIZE=1000
PROCESSING_TIMEOUT=120

# ===== API SETTINGS =====
API_VERSION=v1
API_RATE_LIMIT_HEADERS=True
API_DOCUMENTATION_URL=/docs

# ===== MONITORING & ANALYTICS =====
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/health

# ===== BACKUP SETTINGS =====
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=backups

# ===== DEVELOPMENT SETTINGS =====
ENABLE_PROFILING=False
ENABLE_DEBUGGING_TOOLBAR=False
TESTING_DATABASE_URL=sqlite:///test_ai_learning.db

# ===== PRODUCTION SETTINGS =====
# Uncomment and configure for production deployment
# FLASK_ENV=production
# FLASK_DEBUG=False
# DATABASE_URL=postgresql://user:password@localhost/ai_learning_prod
# REDIS_URL=redis://redis-server:6379/0
